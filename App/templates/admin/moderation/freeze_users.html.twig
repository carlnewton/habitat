{% extends 'admin/base.html.twig' %}
{% set page_title = 'Freeze users' %}

{% block body %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_admin_index')}}">Admin dashboard</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_moderation_users')}}">Moderation</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_moderation_users')}}">Users</a></li>
            <li class="breadcrumb-item active" aria-current="page">Freeze</li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-header p-5 text-center">
            <p class="lead">Are you sure you would like to freeze {% if users|length > 1 %}these users{% else %}this user{% endif %}?</p>
            <p>The user{% if users|length > 1 %}s{% endif %} will not be able to post or comment until the unfreeze time has passed.</p>
            <form method="post" action="{{ path('app_moderation_users_freeze') }}">
                <input name="items" type="hidden" value="{{ user_ids }}">
                <input type="hidden" name="token" value="{{ csrf_token('admin') }}">
                <input type="hidden" name="freeze" value="1">
                <div class="row mb-3 text-start">
                    <label for="freezeForValue" class="form-label col-sm-3 col-lg-2">Freeze for</label>
                    <div class="input-group col">
                        <input type="number" class="form-control{% if errors.freezeFor is defined %} is-invalid{% endif %}" name="freezeForValue" min="1" value="{% if values.freezeForValue is defined %}{{ values.freezeForValue }}{% else %}10{% endif %}">
                        <select class="form-select{% if errors.freezeFor is defined %} is-invalid{% endif %}" name="freezeForInterval" id="freezeFormInterval">
                            {% for interval in intervals %}
                                <option value="{{ interval }}"{% if values.freezeForInterval is defined and values.freezeForInterval == interval %} selected{% endif %}>{{ interval }}</option>
                            {% endfor %}
                        </select>
                        {% if errors.freezeFor is defined %}
                            <div class="invalid-feedback">
                                {% for errorMessage in errors.freezeFor %}
                                    <p>{{ errorMessage }}</p>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="row mb-3 text-start">
                    <label for="reason" class="form-label col-sm-3 col-lg-2">Reason</label>
                    <div class="col">
                        <input type="text" class="form-control{% if errors.reason is defined %} is-invalid{% endif %}" name="reason" value="{% if values.reason is defined %}{{ values.reason }}{% endif %}" required>
                        {% if errors.reason is defined %}
                            <div class="invalid-feedback">
                                {% for errorMessage in errors.reason %}
                                    <p>{{ errorMessage }}</p>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <button type="submit" class="btn btn-danger">Freeze</button>
                <a href="{{ path('app_moderation_users') }}" class="btn btn-outline-primary">Cancel</a>
            </form>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <th>Username</th>
                    <th>Email address</th>
                    <th>Created</th>
                    <th>Posts</th>
                    <th>Comments</th>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.username }}</td>
                            <td>{{ user.emailaddress }}</td>
                            <td>{{ user.created|date }}</td>
                            <td>
                                <div class="d-grid">
                                    <a class="btn btn-link{% if user.posts|length == 0 %} disabled{% endif %}" href="{{ path('app_moderation_posts', { user: user.id }) }}">{{ user.posts|length }}</a>
                                </div>
                            </td>
                            <td>
                                <div class="d-grid">
                                    <a class="btn btn-link{% if user.comments|length == 0 %} disabled{% endif %}" href="{{ path('app_moderation_comments', { user: user.id }) }}">{{ user.comments|length }}</a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
