{% extends 'admin/base.html.twig' %}
{% set page_title = 'admin.actions.change_category.title' | trans %}

{% block body %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_admin_index')}}">{{ 'menus.utility.admin_dashboard.title' | trans }}</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_moderation_posts')}}">{{ 'admin.moderation.title' | trans }}</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_moderation_posts')}}">{{ 'admin.moderation.posts.menu_title' | trans }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ 'admin.actions.change_category.title' | trans }}</li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-header p-5 text-center">
            <p class="lead">
                {{ 'admin.actions.change_category.messages.choose_new' | trans({
                    '%subject%': ((posts|length == 1) ? 'admin.moderation.posts.singular' : 'admin.moderation.posts.plural') | trans
                }) }}
            </p>

            <form method="post">
                <input name="items" type="hidden" value="{{ post_ids }}">
                <input type="hidden" name="token" value="{{ csrf_token('admin') }}">
                <select class="form-select mb-3" name="category" id="category" aria-label="Category">
                    {% for category in categories %}
                        <option value="{{ category.id }}">{{ category.name }}</option>
                    {% endfor %}
                </select>
                <button type="submit" class="btn btn-danger">{{ 'buttons.update' | trans }}</button>
                <a href="{{ path('app_moderation_posts') }}" class="btn btn-outline-primary">{{ 'buttons.cancel' | trans }}</a>
            </form>
        </div>
        <div class="card-body">
            {% for post in posts %}
                {% include 'partials/post/post.html.twig' %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
